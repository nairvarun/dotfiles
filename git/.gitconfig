[alias]
	cl	= !git-cl
	s 	= status -sb
	a 	= add
	aa 	= add .
	c 	= commit -m 
	cc 	= commit -m '.'
	b	= branch
	bb	= branch -a
	ss 	= switch
	l	= log --oneline
	g	= log --graph
	gg	= log --graph --all
	sc	= sparse-checkout
	st	= stash --all
	stp	= stash pop
	o	= !git remote get-url origin | xargs git-open
[init]
	defaultBranch = main
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[includeIf "gitdir:~/wrk/"]
  path = .gitconfig-hf

