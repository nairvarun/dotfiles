#nairvarun
Host github.com-nv
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_ed25519

#nairvarun9
Host github.com-hf
	HostName github.com
	User git
	IdentityFile ~/.ssh/hyperface-github

# hf gcp gpu bastion
Host bastion
    HostName 104.197.67.152
    User hf
    Port 55722
    IdentityFile ~/.ssh/bastion_key		# Specify the key for the bastion
    IdentitiesOnly yes                  # IMPORTANT: Only offer this key (and any explicitly added via -i)
    ForwardAgent yes                    # Enable agent forwarding

# Configuration for Internal VMs (accessed via the bastion)
Host internal-* # Wildcard to match multiple internal VMs
    User hf
    IdentityFile ~/.ssh/internal_key # Specify the key for internal VMs
    IdentitiesOnly yes               # IMPORTANT: Only offer this key
    ProxyJump bastion                # This tells SSH to first connect to 'bastion' host defined above

